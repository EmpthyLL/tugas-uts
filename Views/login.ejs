<section class="min-h-screen flex items-center justify-center">
  <div class="h-full flex items-center justify-center">
    <!-- Left column: Image -->
    <div class="hidden lg:flex w-6/12">
      <img
        src="https://tecdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
        class="w-full"
        alt="Sample image"
      />
    </div>

    <!-- Right column: Forms Container -->
    <div class="w-full max-w-md p-6 bg-white rounded-lg shadow-lg">
      <!-- Login Form -->
      <form id="loginForm" class="space-y-6">
        <h1 class="text-center text-3xl text-gray-800 font-bold">Login</h1>

        <!-- Email input -->
        <div class="mb-6">
          <label for="email" class="block text-gray-800">Email Address</label>
          <input
            type="text"
            id="email"
            name="email"
            class="w-full border rounded py-3 px-3 focus:outline-none focus:ring-2 focus:ring-lime-500"
            autocomplete="off"
            required
          />
        </div>

        <!-- Password input -->
        <div class="mb-4">
          <label for="password" class="block text-gray-800">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="w-full border rounded py-3 px-3 focus:outline-none focus:ring-2 focus:ring-lime-500"
            autocomplete="off"
            required
          />
        </div>

        <!-- Forgot Password -->
        <div class="mb-6 flex items-center justify-items-end">
          <a href="forgotpass.ejs" class="text-sm text-lime-500 hover:text-lime-700 hover:underline">Forgot password?</a
          >
        </div>

        <!-- Login button -->
        <button
          type="submit"
          class="w-full bg-lime-500 text-white py-2 rounded hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-300"
        >
          Login
        </button>

        <!-- Register link -->
        <p class="mt-4 text-center text-sm">
          Don't have an account?
          <a href="/register" class="text-lime-500 hover:text-lime-700 hover:underline">Register</a>
        </p>
      </form>
    </div>
  </div>
</section>
