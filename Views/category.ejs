<div class="p-4 space-y-8">
  <h1 class="text-5xl font-bold text-center my-4">
    Products in <%= title %> category
  </h1>

  <div
    class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4"
  >
    <% products.forEach(product=> { %>
    <div
      class="card bg-white border rounded-lg shadow-md overflow-hidden transition-transform transform hover:scale-105"
    >
      <img
        src="<%= product.thumbnail %>"
        alt="<%= product.title %>"
        class="h-48 w-full object-contain p-2"
      />
      <div class="p-4 text-center">
        <h3 class="font-semibold text-lg mb-1"><%= product.title %></h3>
        <p class="text-gray-800 text-base">
          Rp <%= Math.floor(product.price * 15000).toLocaleString("id-ID") %>
        </p>
      </div>
    </div>
    <% }) %>
  </div>
</div>
