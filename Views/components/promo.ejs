<div
  data-hs-carousel='{
    "loadingClasses": "opacity-0",
    "dotsItemClasses": "hs-carousel-active:bg-blue-700 hs-carousel-active:border-blue-700 size-3 border border-gray-400 rounded-full cursor-pointer dark:border-neutral-600 dark:hs-carousel-active:bg-blue-500 dark:hs-carousel-active:border-blue-500",
    "isAutoPlay": true,
    "isInfiniteLoop": true,
    "slidesQty": 1
  }'
  class="relative"
>
  <div
    class="hs-carousel relative overflow-hidden w-full min-h-[40vh] md:min-h-[60vh] lg:min-h-[70vh] bg-white rounded-lg"
  >
    <div
      class="hs-carousel-body absolute top-0 bottom-0 start-0 flex flex-nowrap transition-transform duration-700 opacity-0"
    >
      <!-- Slide 1 -->
      <div class="hs-carousel-slide">
        <div class="flex justify-center h-full bg-gray-100 dark:bg-neutral-900">
          <span
            class="self-center text-4xl text-gray-800 transition duration-700 dark:text-white"
          >
            <img
              src="/img/promo/banner_1.jpg"
              alt="slide 1"
              class="w-full h-full object-cover md:object-contain rounded-b-lg"
            />
          </span>
        </div>
      </div>

      <!-- Slide 2 -->
      <div class="hs-carousel-slide">
        <div
          class="flex justify-center h-full bg-gray-200 p-4 md:p-6 dark:bg-neutral-800"
        >
          <span
            class="self-center text-4xl text-gray-800 transition duration-700 dark:text-white"
          >
            <img
              src="/img/promo/banner_2.jpg"
              alt="slide 2"
              class="w-full h-full object-cover md:object-contain rounded-b-lg"
            />
          </span>
        </div>
      </div>

      <!-- Slide 3 -->
      <div class="hs-carousel-slide">
        <div
          class="flex justify-center h-full bg-gray-200 p-4 md:p-6 dark:bg-neutral-800"
        >
          <span
            class="self-center text-4xl text-gray-800 transition duration-700 dark:text-white"
          >
            <img
              src="/img/promo/banner_3.jpg"
              alt="slide 2"
              class="w-full h-full object-cover md:object-contain rounded-b-lg"
            />
          </span>
        </div>
      </div>

      <!-- Slide 4 -->
      <div class="hs-carousel-slide">
        <div
          class="flex justify-center h-full bg-gray-200 p-4 md:p-6 dark:bg-neutral-800"
        >
          <span
            class="self-center text-4xl text-gray-800 transition duration-700 dark:text-white"
          >
            <img
              src="/img/promo/banner_4.jpg"
              alt="slide 2"
              class="w-full h-full object-cover md:object-contain rounded-b-lg"
            />
          </span>
        </div>
      </div>
    </div>
  </div>

  <!-- Previous Button -->
  <button
    type="button"
    class="hs-carousel-prev absolute inset-y-1/2 start-0 transform -translate-y-1/2 flex justify-center items-center w-8 h-8 md:w-10 md:h-10 rounded-full bg-white shadow-lg text-gray-800 hover:bg-gray-200/70 focus:outline-none focus:bg-gray-800/10"
  >
    <span class="text-xl md:text-2xl" aria-hidden="true">
      <svg
        class="shrink-0 w-4 h-4 md:w-5 md:h-5"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="m15 18-6-6 6-6"></path>
      </svg>
    </span>
    <span class="sr-only">Previous</span>
  </button>

  <!-- Next Button -->
  <button
    type="button"
    class="hs-carousel-next absolute inset-y-1/2 end-0 transform -translate-y-1/2 flex justify-center items-center w-8 h-8 md:w-10 md:h-10 rounded-full bg-white shadow-lg text-gray-800 hover:bg-gray-200/70 focus:outline-none focus:bg-gray-800/10"
  >
    <span class="sr-only">Next</span>
    <span class="text-xl md:text-2xl" aria-hidden="true">
      <svg
        class="shrink-0 w-4 h-4 md:w-5 md:h-5"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="m9 18 6-6-6-6"></path>
      </svg>
    </span>
  </button>

  <!-- Pagination Dots -->
  <div
    class="hs-carousel-pagination flex justify-center absolute bottom-2 md:bottom-3 start-0 end-0 space-x-1 md:space-x-2"
  ></div>
</div>
