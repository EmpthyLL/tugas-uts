<!-- Slider -->
<div
  data-hs-carousel='{
    "loadingClasses": "opacity-0",
    "dotsItemClasses": "hs-carousel-active:bg-blue-700 hs-carousel-active:border-blue-700 size-3 border border-gray-400 rounded-full cursor-pointer dark:border-neutral-600 dark:hs-carousel-active:bg-blue-500 dark:hs-carousel-active:border-blue-500",
    "isAutoPlay": true
  }'
  class="relative"
>
  <div
    class="hs-carousel relative overflow-hidden w-full min-h-[60vh] bg-white rounded-lg"
  >
    <div
      class="hs-carousel-body absolute top-0 bottom-0 start-0 flex flex-nowrap transition-transform duration-700 opacity-0"
    >
      <div class="hs-carousel-slide">
        <div class="flex justify-center h-full bg-gray-100 dark:bg-neutral-900">
          <span
            class="self-center text-4xl text-gray-800 transition duration-700 dark:text-white"
            ><img src="/img/promo/banner_1.png" alt="slide 1" class="w-full h-full object-cover rounded-lg" />
          </span>
        </div>
      </div>
      <div class="hs-carousel-slide">
        <div
          class="flex justify-center h-full bg-gray-200 p-6 dark:bg-neutral-800"
        >
          <span
            class="self-center text-4xl text-gray-800 transition duration-700 dark:text-white"
            ><img src="/img/promo/banner_2.png" alt="slide 2" class="w-full h-full object-contain rounded-lg"
          /></span>
        </div>
      </div>
      <div class="hs-carousel-slide">
        <div
          class="flex justify-center h-full bg-gray-300 p-6 dark:bg-neutral-700"
        >
          <span
            class="self-center text-4xl text-gray-800 transition duration-700 dark:text-white"
            ><img src="/img/promo/banner_3.png" alt="slide 3" class="w-full h-full object-cover rounded-lg"
          /></span>
        </div>
      </div>
      <div class="hs-carousel-slide">
        <div
          class="flex justify-center h-full bg-gray-300 p-6 dark:bg-neutral-700"
        >
          <span
            class="self-center text-4xl text-gray-800 transition duration-700 dark:text-white"
            ><img src="/img/promo/banner_3.png" alt="" class="object-cover"
          /></span>
        </div>
      </div>
    </div>
  </div>

  <!-- Previous Button -->
  <button
    type="button"
    class="hs-carousel-prev hs-carousel-disabled:opacity-50 hs-carousel-disabled:pointer-events-none absolute inset-y-1/2 start-0 transform -translate-y-1/2 inline-flex justify-center items-center w-10 h-10 rounded-full bg-white shadow-lg text-gray-800 hover:bg-gray-200/70 focus:outline-none focus:bg-gray-800/10"
  >
    <span class="text-2xl" aria-hidden="true">
      <svg
        class="shrink-0 size-5"
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="m15 18-6-6 6-6"></path>
      </svg>
    </span>
    <span class="sr-only">Previous</span>
  </button>

  <!-- Next Button -->
  <button
    type="button"
    class="hs-carousel-next hs-carousel-disabled:opacity-50 hs-carousel-disabled:pointer-events-none absolute inset-y-1/2 end-0 transform -translate-y-1/2 inline-flex justify-center items-center w-10 h-10 rounded-full bg-white shadow-lg text-gray-800 hover:bg-gray-200/70 focus:outline-none focus:bg-gray-800/10"
  >
    <span class="sr-only">Next</span>
    <span class="text-2xl" aria-hidden="true">
      <svg
        class="shrink-0 size-5"
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="m9 18 6-6-6-6"></path>
      </svg>
    </span>
  </button>
  <div
    class="hs-carousel-pagination flex justify-center absolute bottom-3 start-0 end-0 space-x-2"
  ></div>
</div>
<!-- End Slider -->
