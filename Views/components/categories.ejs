<div class="mx-2">
  <h1
    class="font-bold text-3xl sm:text-4xl md:text-5xl my-4 sm:my-6 text-center"
  >
    Category
  </h1>

  <!-- Carousel Wrapper -->
  <div
    data-hs-carousel='{
      "loadingClasses": "opacity-0",
      "isInfiniteLoop": true,
      "slidesQty": 1
    }'
    class="relative"
  >
    <div
      class="hs-carousel relative overflow-hidden w-full min-h-96 md:min-h-60 rounded-lg bg-gradient-to-r from-blue-200 via-purple-200 to-pink-200"
    >
      <div
        class="hs-carousel-body absolute top-0 bottom-0 start-0 flex items-center transition-transform duration-700 opacity-0"
      >
        <!-- Nested Loop for Carousel Slides -->
        <% for (let i = 0; i < categories.data.length; i += 8) { %>
        <div class="hs-carousel-slide w-full flex justify-center">
          <div class="grid grid-cols-4 md:grid-cols-8 gap-2 p-1 sm:p-2 w-full">
            <% for (let j = i; j < i + 8 && j < categories.data.length; j++) {
            %>
            <a
              href="/category/<%= categories.data[j].slug %>"
              class="bg-white rounded-lg shadow-md p-1 flex flex-col justify-center items-center cursor-pointer transition-transform transform hover:scale-105 h-52"
            >
              <img
                src="<%= '/img/category/' + categories.data[j].slug + '.png' %>"
                alt="<%= categories.data[j].name %>"
                class="w-full h-40 object-cover rounded-t-lg"
              />
              <h2
                class="text-[10px] sm:text-xs md:text-sm lg:text-[16px] xl:text-lg text-center font-semibold text-black mt-1"
              >
                <%= categories.data[j].name %>
              </h2>
            </a>
            <% } %>
          </div>
        </div>
        <% } %>
      </div>
    </div>

    <!-- Previous Button -->
    <button
      type="button"
      class="hs-carousel-prev hs-carousel-disabled:opacity-50 hs-carousel-disabled:pointer-events-none absolute inset-y-1/2 start-0 transform -translate-y-1/2 inline-flex justify-center items-center w-10 h-10 rounded-full bg-white shadow-lg text-gray-800 hover:bg-gray-200/70 focus:outline-none focus:bg-gray-800/10"
    >
      <span class="text-2xl" aria-hidden="true">
        <svg
          class="shrink-0 size-5"
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="m15 18-6-6 6-6"></path>
        </svg>
      </span>
      <span class="sr-only">Previous</span>
    </button>

    <!-- Next Button -->
    <button
      type="button"
      class="hs-carousel-next hs-carousel-disabled:opacity-50 hs-carousel-disabled:pointer-events-none absolute inset-y-1/2 end-0 transform -translate-y-1/2 inline-flex justify-center items-center w-10 h-10 rounded-full bg-white shadow-lg text-gray-800 hover:bg-gray-200/70 focus:outline-none focus:bg-gray-800/10"
    >
      <span class="sr-only">Next</span>
      <span class="text-2xl" aria-hidden="true">
        <svg
          class="shrink-0 size-5"
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="m9 18 6-6-6-6"></path>
        </svg>
      </span>
    </button>
  </div>
</div>
