<div class="container mx-auto mt-8 p-8 md:p-10 bg-gray-50 rounded-lg shadow-md">
  <h1 class="text-5xl font-bold text-center text-gray-800 mb-6">
    <%= product.title %>
  </h1>
  <div class="flex flex-col md:flex-row items-start justify-between">
    <img
      src="<%= product.thumbnail %>"
      alt="<%= product.title %>"
      class="w-64 h-auto rounded-lg shadow-lg mb-4 md:mb-0 md:mr-6 transition-transform transform hover:scale-105"
    />
    <div class="flex-grow">
      <p class="text-2xl font-semibold text-gray-900 mb-2">
        Price: Rp <%= Math.floor(product.price * 15000).toLocaleString("id-ID") %>
      </p>
      <p class="text-base text-gray-600 mb-2">
        Brand:
        <span class="font-semibold text-gray-800"><%= product.brand %></span>
      </p>
      <p class="text-base text-gray-600 mb-2">
        Category:
        <a href="/category/<%= product.category.toLowerCase().replace(/\s+/g, '-') %>/product/<%= product.id %>" 
          class="font-semibold text-blue-600 hover:underline">
          <%= product.category %>
        </a>
        
      </p>
      <div class="flex flex-wrap mb-4">
        <% product.tags.forEach(tag => { %>
        <span class="bg-blue-100 text-blue-600 text-xs font-medium mr-2 mb-2 px-2.5 py-0.5 rounded-full">
          <%= tag %>
        </span>
        <% }); %>
      </div>
      <p class="text-lg text-gray-700 mt-4 leading-relaxed">
        <%= product.description %>
      </p>
      <div class="mt-6">
        <button
          class="w-full bg-green-600 text-white py-3 px-4 rounded-md shadow hover:bg-green-700 transition duration-300 ease-in-out"
          onclick="addToCart('<%= product.id %>')"
        >
          Add to Cart
        </button>
      </div>
    </div>
  </div>

  <!-- Related Products Section -->
  <h2 class="text-3xl font-bold text-gray-800 mt-8 mb-4 text-center">
    Recommended Products
  </h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% relatedProducts.forEach(relatedProduct => { %>
      <a
        href="/product/<%= relatedProduct.id %>"
        class="card bg-white border rounded-lg shadow-md overflow-hidden transition-transform transform hover:scale-105"
      >
        <img
          src="<%= relatedProduct.thumbnail %>"
          alt="<%= relatedProduct.title %>"
          class="h-48 w-full object-contain p-2"
        />
        <div class="p-4 text-center">
          <h3 class="font-semibold text-lg mb-1"><%= relatedProduct.title %></h3>
          <p class="text-gray-800 text-base">
            Rp <%= Math.floor(relatedProduct.price * 15000).toLocaleString("id-ID") %>
          </p>
        </div>
      </a>    
    <% }); %>
  </div>
</div>