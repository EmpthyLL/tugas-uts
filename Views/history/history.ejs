<div class="max-w-4xl mx-auto my-8 p-6 rounded-lg bg-slate-200 shadow-lg">
  <p class="font-bold text-center text-3xl text-gray-800 mb-6">
    <%= user.fullname %> Order History
  </p>
  <div class="bg-gray-100 shadow-lg border rounded-lg p-5">
    <% if (history.length > 0) { %>
    <!-- Orders List -->
    <div class="space-y-6 mt-6">
      <% history?.forEach(item => { %>
      <form method="get" action="/history/<%= item.uuid %>" class="w-full">
        <button
          class="flex flex-wrap md:flex-nowrap items-center gap-6 p-5 bg-white rounded-lg shadow-md border border-gray-200 transition-transform transform hover:scale-105 hover:shadow-xl focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 w-full"
        >
          <div class="flex flex-col space-y-4 w-full">
            <!-- Order Details -->
            <p class="text-lg font-medium text-gray-600">
              <%= formatDate(item.created_at) %>
            </p>
            <div class="flex items-center gap-4">
              <!-- Logo -->
              <img
                src="/img/A3Mart.png"
                alt="Logo"
                class="w-32 h-24 rounded-md"
              />
              <div class="flex flex-col">
                <p class="text-lg font-semibold text-gray-800">
                  <%= formatCurrency(item.cart.total) %>
                </p>
                <p class="text-sm text-gray-700">
                  Total Items: <%= item.cart?.items?.length %>
                </p>
                <p class="text-sm text-gray-500">
                  Driver:
                  <span class="font-medium"><%= item.driver.name %></span> | <%=
                  item.driver.plat_num %>
                </p>
              </div>
            </div>
            <div>
              <% if (item.status) { %> <% if (item.status === 1) { %>
              <span
                class="text-green-600 bg-green-100 px-3 py-1 rounded-lg text-sm font-medium"
              >
                <%= item.status_name %>
              </span>
              <% } else if (item.status === 2) { %>
              <span
                class="text-red-600 bg-red-100 px-3 py-1 rounded-lg text-sm font-medium"
              >
                <%= item.status_name %>
              </span>
              <% } else { %>
              <span
                class="text-yellow-600 bg-yellow-100 px-3 py-1 rounded-lg text-sm font-medium"
              >
                <%= item.status_name %>
              </span>
              <% } %> <% } else { %>
              <span
                class="text-gray-500 bg-gray-200 px-3 py-1 rounded-lg text-sm font-medium"
              >
                Unknown Status
              </span>
              <% } %>
            </div>
          </div>
        </button>
      </form>
      <% }) %>
    </div>
    <% } else { %>
    <!-- Empty State -->
    <div
      class="flex flex-col items-center justify-center text-center mt-16 space-y-6"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="50"
        height="50"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-badge-alert"
      >
        <path
          d="M3.85 8.62a4 4 0 0 1 4.78-4.77 4 4 0 0 1 6.74 0 4 4 0 0 1 4.78 4.78 4 4 0 0 1 0 6.74 4 4 0 0 1-4.77 4.78 4 4 0 0 1-6.75 0 4 4 0 0 1-4.78-4.77 4 4 0 0 1 0-6.76Z"
        />
        <line x1="12" x2="12" y1="8" y2="12" />
        <line x1="12" x2="12.01" y1="16" y2="16" />
      </svg>
      <p class="text-lg font-medium text-gray-600">
        You havenâ€™t placed any orders yet.
      </p>
      <a
        href="/"
        class="px-6 py-3 bg-indigo-600 text-white font-semibold rounded-lg shadow-md hover:bg-indigo-700 focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all"
      >
        Start Shopping
      </a>
    </div>
    <% } %>
  </div>
</div>
