<div class="max-w-4xl mx-auto my-10 p-8 rounded-lg bg-white shadow-xl">
  <p class="font-bold text-center text-3xl text-gray-800 mb-6">
    <%= user.fullname %> Order History
  </p>
  <div class="bg-gray-50 shadow-lg border rounded-xl p-6">
    <% if (history.length > 0) { %>
    <!-- Orders List -->
    <div class="space-y-8 mt-6">
      <% history?.forEach(item => { %>
      <form method="get" action="/history/<%= item.uuid %>" class="w-full">
        <button
          class="flex flex-wrap md:flex-nowrap items-center gap-6 p-6 bg-white rounded-xl shadow-md border border-gray-200 transition-transform transform hover:scale-105 hover:shadow-2xl focus:outline-none focus:ring-4 focus:ring-indigo-500 w-full"
        >
          <div class="flex flex-col space-y-4 w-full">
            <!-- Order Details -->
            <p class="text-lg font-semibold text-gray-700">
              <%= formatDate(item.created_at) %>
            </p>

            <div class="flex items-center gap-6">
              <!-- Logo -->
              <img
                src="/img/A3Mart.png"
                alt="Logo"
                class="w-32 h-24 rounded-md shadow-sm"
              />
              <div class="flex flex-col text-left">
                <p class="text-xl font-bold text-gray-900">
                  <%= formatCurrency(item.cart.total) %>
                </p>
                <p class="text-sm text-gray-600">
                  Total Items: <%= item.cart?.items?.length %>
                </p>
              </div>
              <div class="flex flex-col text-right ml-auto">
                <div class="text-sm text-gray-700">
                  <span class="font-medium"><%= item.driver.name %></span> | <%= item.driver.plat_num %>
                </div>
                <% if (item.status === 1) { %>
                  <% if (item.rating > 0) { %>
                    <div class="mt-1 flex items-center ml-auto text-right">
                      <div><%= item.rating %></div>
                      <ion-icon name="star" class="text-yellow-500"></ion-icon>
                    </div>
                  <% } else { %>
                    <div class="mt-1 flex items-center ml-auto text-right">
                      <a href="/rate-driver" class="underline text-blue-500">Haven't rate the driver?</a>
                    </div>
                  <% } %>
                <% } %>
              </div>

            </div>
            
            <div class="text-right">
              <% if (item.status) { %>
                <% if (item.status === 1) { %>
                <span
                  class="text-green-700 bg-green-100 px-4 py-2 rounded-lg text-sm font-semibold"
                >
                  <%= item.status_name %>
                </span>
                <% } else if (item.status === 2) { %>
                <span
                  class="text-red-700 bg-red-100 px-4 py-2 rounded-lg text-sm font-semibold"
                >
                  <%= item.status_name %>
                </span>
                <% } else { %>
                <span
                  class="text-yellow-700 bg-yellow-100 px-4 py-2 rounded-lg text-sm font-semibold"
                >
                  <%= item.status_name %>
                </span>
                <% } %>
              <% } else { %>
              <span
                class="text-gray-600 bg-gray-200 px-4 py-2 rounded-lg text-sm font-semibold"
              >
                Unknown Status
              </span>
              <% } %>
            </div>
          </div>
        </button>
      </form>
      <% }) %>
    </div>
    <% } else { %>
    <!-- Empty State -->
    <div
      class="flex flex-col items-center justify-center text-center mt-16 space-y-8"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="60"
        height="60"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-badge-alert text-gray-400"
      >
        <path
          d="M3.85 8.62a4 4 0 0 1 4.78-4.77 4 4 0 0 1 6.74 0 4 4 0 0 1 4.78 4.78 4 4 0 0 1 0 6.74 4 4 0 0 1-4.77 4.78 4 4 0 0 1-6.75 0 4 4 0 0 1-4.78-4.77 4 4 0 0 1 0-6.76Z"
        />
        <line x1="12" x2="12" y1="8" y2="12" />
        <line x1="12" x2="12.01" y1="16" y2="16" />
      </svg>
      <p class="text-lg font-medium text-gray-600">
        You havenâ€™t placed any orders yet.
      </p>
      <a
        href="/"
        class="px-8 py-3 bg-green-500 text-white font-semibold rounded-xl shadow-md hover:bg-green-700 focus:ring-4 focus:ring-offset-2 focus:ring-green-500 transition-all"
      >
        Start Shopping
      </a>
    </div>
    <% } %>
  </div>
</div>