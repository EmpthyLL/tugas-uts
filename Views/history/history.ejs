<div
  class="max-w-4xl mx-auto my-8 p-6 rounded-lg bg-gray-50 shadow-lg"
>
  <p class="font-bold text-center text-3xl text-gray-800 mb-6">
    <%= user.fullname %> Order History
  </p>

  <% if (history.length > 0) { %>
  <div class="space-y-6 mt-6">
    <% history?.forEach(item => { %>
    <form method="get" action="/history/<%= item.uuid %>" class="w-full">
      <button
        class="flex flex-wrap md:flex-nowrap items-center gap-6 p-5 bg-white rounded-lg shadow-md border border-gray-200 transition-transform transform hover:scale-105 hover:shadow-xl focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 w-full"
      >
        <div class="flex flex-col space-y-4 w-full">
          <!-- Tanggal -->
          <p class="text-lg font-medium text-gray-600">
            <%= formatDate(item.created_at) %>
          </p>
          
          <div class="flex items-center w-full gap-4">
            <!-- Logo -->
            <div class="flex items-center">
              <img src="/img/A3Mart.png" alt="Logo" class="w-32 h-24 rounded-md" />
            </div>
          
            <div class="flex justify-between items-start w-full">
              <!-- Total Belanja dan Total Items -->
              <div class="flex flex-col text-left">
                <!-- Total Belanja -->
                <p class="text-lg font-semibold text-gray-800">
                  <%= formatCurrency(item.cart.total) %>
                </p>
                <!-- Total Items -->
                <p class="text-sm text-gray-700">
                  Total Items: <%= item.cart?.items?.length %>
                </p>
              </div>
            
              <div class="flex flex-col text-right">
                <!-- Driver dan Plat -->
                <div>
                  <p class="text-sm text-gray-500">
                    <span class="font-medium"><%= item.driver.name %></span> | <%= item.driver.plat_num %>
                  </p>
                </div>
            
                <!-- Rating -->
                <div>
                  <div class="flex justify-end text-lg items-center text-gray-500">
                    <% if (item.rating != null) { %>
                      <%= item.rating %>
                      <ion-icon name="star" class="text-yellow-400 w-6 h-6"></ion-icon>
                     <% } else { %>
                      <a href="/rate-driver" class="text-blue-500 underline text-sm">Haven't rate the driver?</a>
                    <% } %>
                     
                  </div>
                </div>
              </div>
            </div>
            
          </div>
          
                    

          <!-- Status -->
          <div class="flex text-right mt-3 w-full gap-4">
            <div>
              <% if (item.status) { %>
                <% if (item.status === 1) { %>
                  <span
                    class="text-green-600 bg-green-100 px-3 py-1 rounded-lg text-sm font-medium"
                  >
                    <%= item.status_name %>
                  </span>
                <% } else if (item.status === 2) { %>
                  <span
                    class="text-red-600 bg-red-100 px-3 py-1 rounded-lg text-sm font-medium"
                  >
                    <%= item.status_name %>
                  </span>
                <% } else { %>
                  <span
                    class="text-yellow-600 bg-yellow-100 px-3 py-1 rounded-lg text-sm font-medium"
                  >
                    <%= item.status_name %>
                  </span>
                <% } %>
              <% } else { %>
                <span
                  class="text-gray-500 bg-gray-200 px-3 py-1 rounded-lg text-sm font-medium"
                >
                  Unknown Status
                </span>
              <% } %>
            </div>
          </div>

        </div>
      </button>
    </form>
    <% }) %>
  </div>
  <% } else { %>
  <p class="text-center text-gray-500 text-lg mt-6">
    You haven't placed any orders yet.
  </p>
  <% } %>
</div>
