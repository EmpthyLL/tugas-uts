<div
  class="max-w-4xl mx-auto my-8 p-6 rounded-lg bg-gray-50 shadow-lg"
>
  <p class="font-bold text-center text-3xl text-gray-800mb-4">
    <%= user.fullname %> Order History
  </p>

  <% if (history.length > 0) { %>
  <div class="space-y-6 mt-6">
    <% history?.forEach(item => { %>
    <form method="get" action="/history/<%= item.uuid %>">
      <button
        class="flex items-center space-x-6 p-5 bg-white rounded-lg shadow-md border border-gray-200 transition-transform transform hover:scale-105 hover:shadow-xl"
      >
        <div class="flex flex-col space-y-4 w-full">
          <!-- Tanggal -->
          <p class="text-sm font-medium text-gray-600">
            <%= formatDate(item.created_at) %>
          </p>

          <!-- Logo -->
          <div class="flex items-center">
            <img src="/img/a3mart.png" alt="Logo" class="w-6 h-6 rounded-md" />
          </div>

          <!-- Total Belanja -->
          <div class="flex items-center justify-between">
            <p class="text-lg font-semibold text-gray-800">
              <%= formatCurrency(item.cart.total) %>
            </p>
            <p class="text-sm text-gray-500">
              <span class="font-medium"><%= item.driver.name %></span> | <%=
              item.driver.plat_num %>
            </p>
          </div>

          <!-- Total Item dan Status -->
          <div class="flex justify-between items-center mt-3">
            <p class="text-sm text-gray-700">
              Total Items: <%= cart?.items?.length %>
            </p>
            <div>
              <% if (item.status) { %> <% if (item.status === 1) { %>
              <span
                class="text-green-600 bg-green-100 px-3 py-1 rounded-lg text-sm font-medium"
              >
                <%= item.status_name %>
              </span>
              <% } else if (item.status === 2) { %>
              <span
                class="text-red-600 bg-red-100 px-3 py-1 rounded-lg text-sm font-medium"
              >
                <%= item.status_name %>
              </span>
              <% } else { %>
              <span
                class="text-yellow-600 bg-yellow-100 px-3 py-1 rounded-lg text-sm font-medium"
              >
                <%= item.status_name %>
              </span>
              <% } %> <% } else { %>
              <span
                class="text-gray-500 bg-gray-200 px-3 py-1 rounded-lg text-sm font-medium"
              >
                Unknown Status
              </span>
              <% } %>
            </div>
          </div>
        </div>
      </button>
    </form>
    <% }) %>
  </div>
  <% } else { %>
  <p class="text-center text-gray-500 text-lg mt-6">
    You haven't placed any orders yet.
  </p>
  <% } %>
</div>