<div class="max-w-4xl mx-auto bg-white p-6 my-6 rounded-lg shadow-md">
  <div>
    <h2
      class="text-2xl font-bold mb-2 bg-gradient-to-r from-blue-500 to-purple-950 bg-clip-text text-transparent"
    >
      Shopping bag
    </h2>

    <% cart.items.forEach(item => { %>
      <div class="flex items-start border-b pb-4 mb-4" id="product-<%= item.id %>">
        <a href="/product/<%= item.id %>">
          <img
            src="<%= item.thumbnail %>"
            alt="<%= item.title %>"
            class="w-24 h-24 object-cover rounded-md mr-4"
          />
        </a>
        <div class="flex-1">
          <h3 class="font-semibold text-lg"><%= item.title %></h3>
          <p class="text-gray-500">Price: Rp <%= Math.floor(item.price *
                        15000).toLocaleString("id-ID") %></p>
          <p class="text-gray-500">Brand: <%= item.brand %></p>
          <p class="text-gray-500">Category: <%= item.category %></p>
        </div>
        <div class="flex flex-col items-end ml-6">
          <label class="text-gray-500">Quantity</label>
          <select class="border-gray-300 rounded-md" onchange="updateCartQuantity(<%= item.id %>, this.value)">
            <% for(let i = 1; i <= 10; i++) { %>
              <option value="<%= i %>" <%= item.quantity === i ? 'selected' : '' %>><%= i %></option>
            <% } %>
          </select>
          <div class="mt-8 font-bold text-lg">
            <p>Rp <%= Math.floor(item.total *
                        15000).toLocaleString("id-ID")%></p>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <!-- Order Summary Section -->
  <div class="mt-8">
  <h2 class="text-2xl font-bold mb-2 bg-gradient-to-r from-blue-500 to-purple-900 bg-clip-text text-transparent">Order summary</h2>
  <div class="space-y-2" id="order-summary">
    <div class="flex justify-between">
      <span>Subtotal</span>
      <span id="subtotal"><%= new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR' }).format(cart.cart_total) %></span>
    </div>
    <div class="flex justify-between">
      <span>Shipping</span>
      <span><%= new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR' }).format(cart.delivery) %></span>
    </div>
    <div class="flex justify-between">
      <span>Estimated Tax</span>
      <span><%= new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR' }).format(cart.tax) %></span>
    </div>
    <div class="flex justify-between text-red-600">
      <span>Member Discount</span>
      <span>- <%= new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR' }).format(cart.member_discount) %></span>
    </div>
  </div>
  <div class="flex justify-between text-xl font-bold mt-4">
    <span>Total</span>
    <span id="total"><%= new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR' }).format(cart.total) %></span>
  </div>
</div>


    <!-- Checkout Button -->
    <div class="mt-6">
      <button class="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold">Checkout</button>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="/js/cartHandle.js"></script>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
  async function updateCartQuantity(productId, quantity) {
    try {
      const response = await axios.post("/cart/update", { productId, quantity: parseInt(quantity) });
      if (response.status === 200) {
        const { subtotal, total } = response.data;
        document.getElementById("subtotal").innerText = `$${subtotal.toFixed(2)}`;
        document.getElementById("total").innerText = `$${total.toFixed(2)}`;
      }
    } catch (error) {
      console.error("Error updating cart quantity:", error);
    }
  }

  async function removeFromCart(productId) {
    try {
      const response = await axios.post("/cart/remove", { productId });
      if (response.status === 200) {
        document.getElementById(`product-${productId}`).remove();
        const { subtotal, total } = response.data;
        document.getElementById("subtotal").innerText = `$${subtotal.toFixed(2)}`;
        document.getElementById("total").innerText = `$${total.toFixed(2)}`;
      }
    } catch (error) {
      console.error("Error removing item from cart:", error);
    }
  }
</script>
