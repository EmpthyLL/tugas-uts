<%- include('./components/categories') %>

<!-- Product Section -->
<h1 class="font-bold text-xl sm:text-2xl md:text-3xl my-1 sm:my-3 text-center">
  Products
</h1>
<div class="p-4 space-y-8">
  <% products.forEach(product => { %>
  <div>
    <h2 class="font-bold text-xl sm:text-2xl m-4 text-center">
      <%= product[0] %>
    </h2>

    <div
      class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4"
    >
      <% product[1].forEach(item => { %>
      <div
        class="card bg-white border rounded-lg shadow-md overflow-hidden transition-transform transform hover:scale-105"
      >
        <img
          src="<%= item.thumbnail %>"
          alt="<%= item.title %>"
          class="h-48 w-full object-contain p-2"
        />
        <div class="p-4 text-center">
          <h3 class="font-semibold text-lg mb-1"><%= item.title %></h3>
          <p class="text-gray-800 text-base">
            Rp <%= Math.floor(item.price * 15000).toLocaleString("id-ID") %>
          </p>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
  <% }) %>
</div>
