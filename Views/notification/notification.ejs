<body class="bg-gray-100 dark:bg-gray-800">
  <div
    class="max-w-4xl mx-auto my-8 p-6 rounded-lg bg-gray-50 dark:bg-gray-900 shadow-lg"
  >
    <!-- Header Section -->
    <div class="flex justify-between items-center border-b pb-4 mb-4">
      <div class="flex gap-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0"
          />
        </svg>

        <h1 class="text-2xl font-semibold text-gray-700 dark:text-gray-100">
          Notification List
        </h1>
      </div>
      <div class="flex items-center gap-2">
        <!-- Profile Image -->

        <div
          class="w-8 h-8 sm:w-10 sm:h-10 rounded-full border-2 border-gray-700 overflow-hidden flex items-center justify-center shadow-md bg-white dark:bg-neutral-800"
        >
          <img
            src="<%= user.profile_pic || '/img/profile.webp' %>"
            alt="profile"
            class="w-full h-full object-cover"
          />
        </div>

        <!-- Text Content (Only shown on medium screens) -->

        <div
          class="text-gray-700 font-semibold text-sm md:text-base truncate flex-grow min-w-0 hidden lg:block"
        >
          <%= user.fullname.split(" ")[0] %>
        </div>
      </div>
    </div>
    <div class="flex">
      <div
        class="w-1/2 p-4 bg-blue-100 dark:bg-blue-900 rounded-lg shadow-md m-2"
      >
        <div class="flex gap-2 border-b border-gray-300 pb-4">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="size-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 0 0 2.25-2.25V6.75A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25v10.5A2.25 2.25 0 0 0 4.5 19.5Z"
            />
          </svg>
          <h3 class="text-xl font-semibold text-gray-700">Payment</h3>
        </div>

        <div>
          <% if (notification.length > 0) { %>
          <div class="space-y-6 mt-6">
            <% notification.forEach(item => { %>
            <form method="get" action="/notification/<%= item.uuid %>">
              <button
                class="flex items-center space-x-6 p-5 bg-white dark:bg-gray-800 rounded-lg shadow-md border border-gray-200 dark:border-gray-700 transition-transform transform hover:scale-105 hover:shadow-xl"
              >
                <div class="flex flex-col space-y-4 w-full">
                  <!-- Tanggal -->
                  <p
                    class="text-sm font-medium text-gray-600 dark:text-gray-400"
                  >
                    <%= new Date(item.date).toLocaleDateString('en-US', { month:
                    'long', day: 'numeric', year: 'numeric' }) %>
                  </p>

                  <!-- Logo -->
                  <div class="flex items-center">
                    <img
                      src="/img/a3mart.png"
                      alt="Logo"
                      class="w-6 h-6 rounded-md"
                    />
                  </div>

                  <!-- Total Belanja -->
                  <div class="flex items-center justify-between">
                    <p
                      class="text-lg font-semibold text-gray-800 dark:text-white"
                    >
                      <%= formatCurrency(item.cart.total) %>
                    </p>
                    <p class="text-sm text-gray-500 dark:text-gray-300">
                      <span class="font-medium"><%= driver.name %></span> | <%=
                      driver.plat_num %>
                    </p>
                  </div>

                  <!-- Total Item dan Status -->
                  <div class="flex justify-between items-center mt-3">
                    <p class="text-sm text-gray-700 dark:text-gray-300">
                      Total Items: <%= cart.items.length %>
                    </p>
                    <div>
                      <% if (item.status) { %> <% if (item.status.toLowerCase()
                      === "completed") { %>
                      <span
                        class="text-green-600 bg-green-100 dark:bg-green-900 px-3 py-1 rounded-lg text-sm font-medium"
                      >
                        <%= item.status %>
                      </span>
                      <% } else if (item.status.toLowerCase() === "canceled") {
                      %>
                      <span
                        class="text-yellow-600 bg-yellow-100 dark:bg-yellow-900 px-3 py-1 rounded-lg text-sm font-medium"
                      >
                        <%= item.status %>
                      </span>
                      <% } else { %>
                      <span
                        class="text-gray-500 bg-gray-200 dark:bg-gray-700 px-3 py-1 rounded-lg text-sm font-medium"
                      >
                        Unknown Status
                      </span>
                      <% } %> <% } else { %>
                      <span
                        class="text-gray-500 bg-gray-200 dark:bg-gray-700 px-3 py-1 rounded-lg text-sm font-medium"
                      >
                        Unknown Status
                      </span>
                      <% } %>
                    </div>
                  </div>
                </div>
              </button>
            </form>
            <% }) %>
          </div>
          <% } else { %>
          <p class="text-center text-gray-500 dark:text-gray-400 text-lg mt-6">
            You haven't top-up yet.
          </p>
          <% } %>
        </div>
      </div>

      <!-- Div kanan -->
      <div
        class="w-1/2 p-4 bg-green-100 dark:bg-green-900 rounded-lg shadow-md m-2 border-b pb-4"
      >
        <div class="flex gap-2 border-b border-gray-300 pb-4">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="size-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 0 0 2.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 0 0-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-.1-.664m-5.8 0A2.251 2.251 0 0 1 13.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25ZM6.75 12h.008v.008H6.75V12Zm0 3h.008v.008H6.75V15Zm0 3h.008v.008H6.75V18Z"
            />
          </svg>
          <h3 class="text-xl font-semibold text-gray-700">Order Notification</h3>
        </div>
        <div></div>
      </div>
    </div>

    <!-- Status List -->
  </div>
</body>