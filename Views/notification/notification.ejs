<div class="max-w-4xl mx-auto my-8 p-6 rounded-lg border bg-gray-50 shadow-lg">
  <!-- Header Section -->
  <div class="flex justify-between items-center border-b pb-4 mb-4">
    <div class="flex gap-2">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0"
        />
      </svg>

      <h1 class="text-2xl font-semibold text-gray-700">Notification List</h1>
    </div>
    <div class="flex items-center gap-2">
      <!-- Profile Image -->

      <div
        class="w-8 h-8 sm:w-10 sm:h-10 rounded-full border-2 border-gray-700 overflow-hidden flex items-center justify-center shadow-md bg-white"
      >
        <img
          src="<%= user.profile_pic || '/img/profile.webp' %>"
          alt="profile"
          class="w-full h-full object-cover"
        />
      </div>

      <!-- Text Content (Only shown on medium screens) -->

      <div
        class="text-gray-700 font-semibold text-sm md:text-base truncate flex-grow min-w-0 hidden lg:block"
      >
        <%= user.fullname.split(" ")[0] %>
      </div>
    </div>
  </div>

  <div class="flex">
    <div class="w-1/2 p-4 bg-blue-100 rounded-lg shadow-md m-2">
      <div class="flex gap-2 border-b border-gray-300 pb-4">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z"
          />
        </svg>

        <h3 class="text-xl font-semibold text-gray-700">Common</h3>
      </div>


    <!-- Div kanan -->
    <div class="w-1/2 p-4 bg-green-100 rounded-lg shadow-md m-2 border-b pb-4">
      <div class="flex gap-2 border-b border-gray-300 pb-4">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-6"
