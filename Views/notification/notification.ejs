<div class="max-w-4xl mx-auto my-8 p-6 rounded-lg bg-slate-100 shadow-lg">
  <!-- Header Section -->
  <div class="flex justify-between items-center border-b pb-4 mb-4">
    <div class="flex gap-2">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0"
        />
      </svg>
      <h1 class="text-2xl font-semibold text-gray-700">Notification List</h1>
    </div>
    <div class="flex items-center gap-2">
      <div
        class="w-8 h-8 sm:w-10 sm:h-10 rounded-full border-2 border-gray-300 overflow-hidden flex items-center justify-center shadow-md bg-white"
      >
        <img
          src="<%= user.profile_pic || '/img/profile.webp' %>"
          alt="profile"
          class="w-full h-full object-cover"
        />
      </div>
      <div
        class="text-gray-700 font-semibold text-sm md:text-base truncate flex-grow min-w-0 hidden lg:block"
      >
        <%= user.fullname.split(" ")[0] %>
      </div>
    </div>
  </div>

  <!-- Buttons Section -->
  <div class="flex">
    <button
      class="notifTab w-1/3 p-4 bg-blue-100 rounded-lg shadow-md m-2 border flex items-center gap-2 text-gray-700 text-xl font-semibold hover:bg-blue-200 transition bg-gradient-to-r from-slate-600 to-slate-500 hover:from-slate-700 hover:to-slate-600 text-white font-semibold rounded-xl shadow-lg ring-2 ring-slate-600 focus:outline-none transition-all duration-300 ease-in-out transform scale-105"
      onclick="showNotification(event, 'common')"
    >
      <% if (notification?.find(item=>!item.is_read && item.category ===
      'common')) { %>
      <span class="w-3 h-3 bg-blue-500 rounded-full" id="commonDot"></span>
      <% } %>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="h-6 w-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z"
        />
      </svg>
      Common
    </button>
    <button
      class="notifTab w-1/3 p-4 bg-green-100 rounded-lg shadow-md m-2 border flex items-center gap-2 text-gray-700 text-xl font-semibold hover:bg-green-200 transition"
      onclick="showNotification(event, 'order')"
    >
      <% if (notification?.find(item=>!item.is_read && item.category ===
      'order')) { %>
      <span class="w-3 h-3 bg-green-500 rounded-full" id="orderDot"></span>
      <% } %>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="h-6 w-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 0 0 2.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 0 0-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-.1-.664m-5.8 0A2.251 2.251 0 0 1 13.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25ZM6.75 12h.008v.008H6.75V12Zm0 3h.008v.008H6.75V15Zm0 3h.008v.008H6.75V18Z"
        />
      </svg>
      Order
    </button>
    <button
      class="notifTab w-1/3 p-4 bg-purple-100 rounded-lg shadow-md m-2 border flex items-center gap-2 text-gray-700 text-xl font-semibold hover:bg-purple-200 transition"
      onclick="showNotification(event, 'payment')"
    >
      <% if (notification?.find(item=>!item.is_read && item.category ===
      'payment')) { %>
      <span class="w-3 h-3 bg-purple-500 rounded-full" id="paymentDot"></span>
      <% } %>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="h-6 w-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 0 0 2.25-2.25V6.75A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25v10.5A2.25 2.25 0 0 0 4.5 19.5Z"
        />
      </svg>
      Payment
    </button>
  </div>

  <!-- Notification Content Section -->
  <div
    id="notificationContent"
    class="min-h-[240px] max-h-[420px] overflow-y-auto m-2 p-4 rounded-lg border bg-gray-50 shadow-lg"
  >
    <% if (data?.length > 0) { %> <% data.forEach(item => { %>
    <a
      href="<%= item.navigate %>"
      onclick="handleNotif(event,<%= item.id %>,'<%= item.navigate %>')"
      class="relative min-h-[84px] flex items-center space-x-4 p-4 bg-white rounded-lg shadow-md border border-gray-200 m-2 hover:bg-green-300 hover:bg-opacity-80 transition duration-200 ease-in-out"
    >
      <div
        class="flex items-center justify-center aspect-square p-2 bg-lime-100 text-lime-500 rounded-full"
      >
        <%- notifIcon[item.type] %>
      </div>

      <!-- Text container -->
      <div class="flex flex-col flex-1">
        <p class="text-sm font-semibold text-gray-700"><%= item.title %></p>

        <div class="flex justify-between items-end mt-1">
          <p class="text-[12px] text-gray-700"><%= item.body %></p>
          <p class="text-[12px] text-gray-400">
            <%= formatDate(item.created_at) %>
          </p>
        </div>
      </div>

      <% if (!item.is_read) { %>
      <span
        class="absolute top-2 right-2 w-3 h-3 bg-red-500 border border-white dark:border-gray-800 rounded-full"
      ></span>
      <% } %>
    </a>
    <% }) %> <% } else { %>
    <p class="text-gray-600 text-center">
      You don't have any notification right now.
    </p>
    <% } %>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
  async function handleNotif(e, id, navigate) {
    e.preventDefault();
    try {
      await axios.post(`/api/notif/read/${id}`);
      window.location.href = navigate;
    } catch (error) {
      if (error.status === 403) {
        window.location.href = "/sign-in";
      }
    }
  }
</script>
<script src="/js/notif.js"></script>
