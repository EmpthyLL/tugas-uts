<div class="max-w-4xl mx-auto bg-white rounded-2xl shadow-lg overflow-hidden my-8 p-8 dark:bg-gray-800 relative grid grid-cols-1 md:grid-cols-2 gap-8">
  <!-- Logout Button -->
  <form action="/logout" method="post" class="absolute top-4 right-4">
    <button type="submit" class="flex items-center bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-full shadow-md transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-red-400">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h6a2 2 0 012 2v1" />
      </svg>
      Logout
    </button>
  </form>

  <!-- Profile Picture and Name -->
  <div class="flex items-center mb-8">
    <img src="<%= user.profile_pic || '/img/profile.webp' %>" alt="Profile Picture" class="w-28 h-28 rounded-full border-4 border-green-500 shadow-md" />
    <div class="ml-6">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white flex items-center">
        <%= user.fullname %>
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-400"><%= user.email %></p>
    </div>
  </div>

  <!-- User Info -->
  <div class="space-y-6 text-gray-700 dark:text-gray-300 col-span-1 md:col-span-2">
    <div class="flex justify-between items-center">
      <a href="/cart" class="flex gap-2 items-center bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded-lg shadow-md transition-all duration-200">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-shopping-cart"><circle cx="8" cy="21" r="1"/><circle cx="19" cy="21" r="1"/><path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12"/></svg>
        Go to Cart
      </a>
      <a href="/history" class="flex gap-2 items-center bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg shadow-md transition-all duration-200">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-history"><path d="M3 12a9 9 0 1 0 9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"/><path d="M3 3v5h5"/><path d="M12 7v5l4 2"/></svg>
        Order History
      </a>
    </div>
  </div>
  

    <!-- Balance -->
    <div class="border rounded-lg p-4 bg-gray-50 dark:bg-gray-700 shadow-sm">
      <p class="font-semibold text-gray-700 dark:text-gray-300 text-lg">Balance:</p>
      <p class="text-2xl font-bold text-gray-900 dark:text-white">Rp. <%= user.balance %></p>
    </div>

    <!-- Member Status -->
    <div class="border rounded-lg p-4 bg-gray-50 dark:bg-gray-700 shadow-sm">
      <p class="font-semibold text-gray-700 dark:text-gray-300 text-lg">Member Status:</p>
      <% if (user.member) { %>
        <p class="text-lg font-bold text-emerald-600">Active since <%= user.member_since ? new Date(user.member_since).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: '2-digit' }) : "N/A" %></p>
      <% } else { %>
        <p class="text-lg font-bold text-red-600">Inactive</p>
        <a href="/become-member" class="inline-block mt-3 px-4 py-2 bg-emerald-600 text-white font-semibold rounded-lg hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-emerald-500 transition-all duration-200">Become a member</a>
      <% } %>
    </div>

    <!-- Contact Information Section -->
    <div class="border rounded-lg p-4 bg-gray-50 dark:bg-gray-700 shadow-sm">
      <h3 class="font-semibold text-lg text-gray-900 dark:text-white mb-2">Contact Information</h3>
      <div class="flex justify-between items-center mb-4">
        <div>
          <p class="font-semibold text-gray-700 dark:text-gray-300">Phone Number:</p>
          <p class="text-base"><%= user.no_hp || "Not provided" %></p>
        </div>
        <button class="text-green-600 text-base font-medium hover:underline focus:outline-none" data-hs-overlay="#editPhoneNumberModal">Edit</button>
      </div>
      <div class="flex justify-between items-center mb-4">
        <div>
          <p class="font-semibold text-gray-700 dark:text-gray-300">Email:</p>
          <p class="text-base"><%= user.email %></p>
        </div>
        <button class="text-green-600 text-base font-medium hover:underline focus:outline-none" data-hs-overlay="#editEmailModal">Edit</button>
      </div>
    </div>

    <!-- Biodata Section -->
    <div class="border rounded-lg p-4 bg-gray-50 dark:bg-gray-700 shadow-sm ">
      <div class="flex gap-2 mb-2">
        <h3 class="font-semibold text-lg text-gray-900 dark:text-white">Biodata</h3>
        <button class="ml-3 text-gray-600 dark:text-gray-400 hover:text-green-600 focus:outline-none" aria-haspopup="dialog" aria-expanded="false" aria-controls="editProfileModal" data-hs-overlay="#editProfileModal">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232a2 2 0 112.828 2.828L7.707 18.414a1 1 0 01-.707.293H4v-3a1 1 0 01.293-.707l10.939-10.94z" />
          </svg>
        </button>
      </div>
      <div class="flex justify-between items-center mb-4">
        <div>
          <p class="font-semibold text-gray-700 dark:text-gray-300">Full Name:</p>
          <p class="text-base"><%= user.fullname %></p>
        </div>
      </div>
      <div class="flex justify-between items-center mb-4">
        <div>
          <p class="font-semibold text-gray-700 dark:text-gray-300">Gender:</p>
          <p class="text-base"><%= user.gender || "Not specified" %></p>
        </div>
      </div>
      <div class="flex justify-between items-center mb-4">
        <div>
          <p class="font-semibold text-gray-700 dark:text-gray-300">Birth Date:</p>
          <p class="text-base"><%= user.birth_date ? new Date(user.birth_date).toLocaleDateString() : "Not specified" %></p>
        </div>
      </div>
    </div>
</div>

<!-- Modal for Editing Profile -->
<div id="editProfileModal" class="hs-overlay hidden size-full fixed top-0 start-0 z-[80] overflow-x-hidden overflow-y-auto pointer-events-none" role="dialog" tabindex="-1" aria-labelledby="editProfileModal-label">
  <div class="hs-overlay-animation-target hs-overlay-open:scale-100 hs-overlay-open:opacity-100 scale-95 opacity-0 ease-in-out transition-all duration-200 sm:max-w-lg sm:w-full m-3 sm:mx-auto min-h-[calc(100%-3.5rem)] flex items-center">
    <div class="w-full flex flex-col bg-white border shadow-sm rounded-xl pointer-events-auto dark:bg-neutral-800 dark:border-neutral-700 dark:shadow-neutral-700/70">
      <div class="flex justify-between items-center py-3 px-4 border-b dark:border-neutral-700">
        <h3 id="editProfileModal-label" class="font-bold text-gray-800 dark:text-white">Edit Profile</h3>
        <button type="button" class="size-8 inline-flex justify-center items-center gap-x-2 rounded-full border border-transparent bg-gray-100 text-gray-800 hover:bg-gray-200 focus:outline-none focus:bg-gray-200 dark:bg-neutral-700 dark:hover:bg-neutral-600 dark:text-neutral-400 dark:focus:bg-neutral-600" aria-label="Close" data-hs-overlay="#editProfileModal">
          <span class="sr-only">Close</span>
          <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M18 6 6 18"></path>
            <path d="m6 6 12 12"></path>
          </svg>
        </button>
      </div>
      <div class="p-4 overflow-y-auto">
        <form action="/edit-profile" method="post" enctype="multipart/form-data">
          <div class="mb-4 relative">
            <label class="block text-gray-700 dark:text-gray-300 text-lg font-bold mb-2">Profile Picture</label>
            <div class="relative">
              <input type="file" name="profile_pic" id="profile_pic" class="hidden" accept="image/*" />
              <label for="profile_pic" class="cursor-pointer">
                <div class="w-32 h-32 flex items-center justify-center border-2 border-dashed border-gray-300 dark:border-neutral-600 rounded-full overflow-hidden relative group">
                  <img id="profilePicture" src="<%= user.profile_pic_url || '/img/profile.webp' %>" alt="Profile Picture" class="w-full h-full object-cover rounded-full" />
                  <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity bg-black bg-opacity-50">
                    <span class="flex flex-col items-center text-white">
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mb-1">
                        <path d="M12 4v16m8-8H4" />
                      </svg>
                      <span class="text-sm">Edit</span>
                    </span>
                  </div>
                </div>
              </label>
            </div>
          </div>

          <div class="mb-4">
            <label class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">Name</label>
            <div class="flex items-center border border-gray-300 rounded-md dark:border-neutral-600">
              <svg xmlns="http://www.w3.org/2000/svg" class="mx-2 text-gray-400" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-users-round"><path d="M18 21a8 8 0 0 0-16 0"/><circle cx="10" cy="8" r="5"/><path d="M22 20c0-3.37-2-6.5-4-8a5 5 0 0 0-.45-8.3"/></svg>
              <input type="text" name="fullname" value="<%= user.fullname %>" class="w-full p-2 border-0 focus:outline-none focus:ring-2 focus:ring-lime-500 dark:bg-gray-700 rounded--l-md border-l border-gray-300 dark:text-white" required />
            </div>
          </div>

          <div class="mb-4">
            <label class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">Gender</label>
            <div class="flex items-center border border-gray-300 rounded-md dark:border-neutral-600">
              <svg xmlns="http://www.w3.org/2000/svg" class="mx-2 text-gray-400" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-square-user-round"><path d="M18 21a6 6 0 0 0-12 0"/><circle cx="12" cy="11" r="4"/><rect width="18" height="18" x="3" y="3" rx="2"/></svg>
              <select name="gender" class="w-full p-2 border-0  rounded--l-md border-l border-gray-300 focus:outline-none focus:ring-2 focus:ring-lime-500 dark:bg-gray-700 dark:text-white" required>
                <option disabled <%= user.gender === null ? 'selected' : '' %>>Select Gender</option>
                <option value="male" <%= user.gender === 'male' ? 'selected' : '' %>>Male</option>
                <option value="female" <%= user.gender === 'female' ? 'selected' : '' %>>Female</option>
                <option value="female" <%= user.gender === 'other' ? 'selected' : '' %>>Other</option>
              </select>
            </div>
          </div>

          <div class="mb-4">
            <label class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">Birth Date</label>
            <div class="flex items-center border border-gray-300 rounded-md dark:border-neutral-600">
              <svg xmlns="http://www.w3.org/2000/svg"  class="mx-2 text-gray-400" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-calendar-days"><path d="M8 2v4"/><path d="M16 2v4"/><rect width="18" height="18" x="3" y="4" rx="2"/><path d="M3 10h18"/><path d="M8 14h.01"/><path d="M12 14h.01"/><path d="M16 14h.01"/><path d="M8 18h.01"/><path d="M12 18h.01"/><path d="M16 18h.01"/></svg>
              <input type="date" name="birth_date" value="<%= user.birth_date ? new Date(user.birth_date).toISOString().split('T')[0] : '' %>" class="w-full p-2 border-0 focus:outline-none  rounded--l-md border-l border-gray-300 focus:ring-2 focus:ring-lime-500 dark:bg-gray-700 dark:text-white" required />
            </div>
          </div>

          <button type="submit" class="mt-6 inline-flex items-center justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500">Save Changes</button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Modal for Editing Email -->
<div id="editEmailModal" class="hs-overlay hidden fixed inset-0 z-[80] overflow-y-auto pointer-events-none" role="dialog" tabindex="-1" aria-labelledby="editEmailModal-label">
  <div class="hs-overlay-animation-target hs-overlay-open:scale-100 hs-overlay-open:opacity-100 scale-95 opacity-0 transition-all duration-200 flex items-center justify-center min-h-screen">
    <div class="w-full max-w-md bg-white border shadow-lg rounded-xl pointer-events-auto dark:bg-neutral-800 dark:border-neutral-700">
      <div class="flex justify-between items-center p-4 border-b dark:border-neutral-700">
        <h3 id="editEmailModal-label" class="text-lg font-semibold text-gray-800 dark:text-white">Edit Email</h3>
        <button type="button" class="inline-flex items-center justify-center p-2 rounded-full text-gray-600 hover:bg-gray-200 dark:hover:bg-neutral-600" aria-label="Close" data-hs-overlay="#editEmailModal">
          <span class="sr-only">Close</span>
          <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path d="M18 6L6 18M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="p-6">
        <form action="/edit-email" method="post">
          <div class="mb-4">
            <label class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">Email Address</label>
            <div class="flex items-center border border-gray-300 rounded-md dark:border-neutral-600">
              <svg xmlns="http://www.w3.org/2000/svg" class="mx-2 text-gray-400" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-at-sign"><circle cx="12" cy="12" r="4"/><path d="M16 8v5a3 3 0 0 0 6 0v-1a10 10 0 1 0-4 8"/></svg>
              <input type="email" name="email" value="<%= user.email %>" class="w-full p-2 border-0 focus:outline-none focus:ring-2 focus:ring-lime-500 dark:bg-gray-700  dark:text-white  rounded--l-md border-l border-gray-300" required />
            </div>
          </div>
          <button type="submit" class="w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-lime-500 flex items-center justify-center">
            <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12h4m-4 0l-2 2m2-2l2-2" />
            </svg>
            Send OTP
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Modal for Editing Phone Number -->
<div id="editPhoneNumberModal" class="hs-overlay hidden fixed inset-0 z-[80] overflow-y-auto pointer-events-none" role="dialog" tabindex="-1" aria-labelledby="editPhoneNumberModal-label">
  <div class="hs-overlay-animation-target hs-overlay-open:scale-100 hs-overlay-open:opacity-100 scale-95 opacity-0 transition-all duration-200 flex items-center justify-center min-h-screen">
    <div class="w-full max-w-md bg-white border shadow-lg rounded-xl pointer-events-auto dark:bg-neutral-800 dark:border-neutral-700">
      <div class="flex justify-between items-center p-4 border-b dark:border-neutral-700">
        <h3 id="editPhoneNumberModal-label" class="text-lg font-semibold text-gray-800 dark:text-white">Edit Phone Number</h3>
        <button type="button" class="inline-flex items-center justify-center p-2 rounded-full text-gray-600 hover:bg-gray-200 dark:hover:bg-neutral-600" aria-label="Close" data-hs-overlay="#editPhoneNumberModal">
          <span class="sr-only">Close</span>
          <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path d="M18 6L6 18M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="p-6">
        <form action="/edit-phone" method="post">
          <div class="mb-4">
            <label class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">Phone Number</label>
            <div class="flex items-center border border-gray-300 rounded-md dark:border-neutral-600">
              <svg xmlns="http://www.w3.org/2000/svg" class="mx-2 text-gray-400"  width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-phone"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
              <input type="text" name="no_hp" value="<%= user.no_hp %>" class="w-full p-2 border-0 focus:outline-none focus:ring-2 focus:ring-lime-500 dark:bg-gray-700 dark:text-white rounded--l-md border-l border-gray-300" required />
            </div>
          </div>
          <button type="submit" class="w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-lime-500 flex items-center justify-center">
            <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12h4m-4 0l-2 2m2-2l2-2" />
            </svg>
            Send OTP
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="/js/profile.js"></script>