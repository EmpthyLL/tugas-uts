<div class="bg-gray-100 min-h-screen flex items-center justify-center">
  <div class="flex flex-col items-center">
    <!-- Container with input and buttons -->
    <div
      class="flex flex-col items-center border rounded-xl shadow-md bg-white p-6 max-w-md w-full space-y-4"
    >
      <div
        class="flex items-center space-x-2 text-lg font-extrabold text-gray-700"
      >
        <span>Rp</span>
        <input
          id="amount"
          type="text"
          class="w-full h-12 px-4 rounded-lg bg-gray-50 border border-gray-300 text-gray-700 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-lime-500"
          placeholder="Enter amount"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mt-8">
        <!-- Amount selection buttons -->
        <button id="first" class="amount-button">18.5k</button>
        <button id="second" class="amount-button">48.5k</button>
        <button id="third" class="amount-button">98.5k</button>
        <button id="fourth" class="amount-button">198.5k</button>
        <button id="fifth" class="amount-button">298.5k</button>
        <button id="sixth" class="amount-button">498.5k</button>
      </div>
    </div>

    <!-- Dropdown menu -->
    <div class="relative mt-6 w-full max-w-md">
      <!-- Dropdown button -->
      <button
        id="hs-dropdown"
        class="w-full py-3 px-4 bg-white rounded-lg shadow flex items-center justify-between text-gray-700 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-lime-500"
      >
        <span id="dropdown-label">Choose your top up method</span>
        <svg
          id="dropdown-icon"
          class="w-5 h-5 text-gray-400"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 9l-7 7-7-7"
          />
        </svg>
      </button>

      <!-- Dropdown menu -->
      <div
        id="dropdown-menu"
        class="absolute mt-2 w-full bg-white shadow-lg rounded-lg hidden z-10"
      >
        <button
          class="w-full store-option px-4 py-2 text-gray-700 hover:bg-gray-100 flex items-center space-x-3"
          data-store="Indomaret"
        >
          <img
            src="/img/topup/indomaret.jpg"
            alt="Indomaret"
            class="w-8 h-8 rounded object-contain"
          />
          <span>Indomaret</span>
        </button>
        <button
          class="w-full store-option px-4 py-2 text-gray-700 hover:bg-gray-100 flex items-center space-x-3"
          data-store="Alfamart"
        >
          <img
            src="/img/topup/alfamart.png"
            alt="Alfamart"
            class="w-8 h-8 rounded object-contain"
          />
          <span>Alfamart</span>
        </button>
        <button
          class="w-full store-option px-4 py-2 text-gray-700 hover:bg-gray-100 flex items-center space-x-3"
          data-store="Alfamidi"
        >
          <img
            src="/img/topup/alfamidi.png"
            alt="Alfamidi"
            class="w-8 h-8 rounded object-contain"
          />
          <span>Alfamidi</span>
        </button>
        <button
          id="clear-dropdown"
          class="w-full px-4 py-2 rounded-lg text-gray-700 hover:bg-gray-100 flex items-center space-x-3 mt-2"
        >
          <span>Clear Selection</span>
        </button>
      </div>
    </div>

    <!-- Confirm Button -->
    <button
      id="confirm-button"
      type="button"
      aria-haspopup="dialog"
      aria-expanded="false"
      aria-controls="confirm-payment"
      data-hs-overlay="#confirm-payment"
      disabled
      class="mt-6 w-full max-w-md py-3 text-white bg-lime-500 rounded-lg shadow hover:bg-lime-600 focus:outline-none focus:ring-2 focus:ring-lime-700 opacity-50 cursor-not-allowed"
    >
      Confirm & Top Up
    </button>
  </div>

  <!-- Modal for Confirmation -->
  <div
    id="confirm-payment"
    class="hs-overlay hidden size-full fixed top-0 start-0 z-[80] overflow-x-hidden overflow-y-auto pointer-events-none bg-opacity-50 bg-black transition-opacity duration-300 ease-in-out"
    role="dialog"
    tabindex="-1"
    aria-labelledby="confirm-payment-label"
  >
    <div
      class="hs-overlay-animation-target hs-overlay-open:scale-100 hs-overlay-open:opacity-100 scale-95 opacity-0 ease-in-out transition-all duration-200 sm:max-w-lg sm:w-full m-4 sm:mx-auto min-h-[calc(100%-3.5rem)] flex items-center justify-center"
    >
      <div
        class="w-full flex flex-col bg-white border shadow-lg rounded-xl pointer-events-auto dark:bg-neutral-800 dark:border-neutral-700 dark:shadow-neutral-700/70"
      >
        <div
          class="flex justify-between items-center py-4 px-6 border-b dark:border-neutral-700"
        >
          <h3
            id="confirm-payment-label"
            class="font-bold text-xl text-gray-800 dark:text-white"
          >
            Payment Confirmation
          </h3>
          <button
            type="button"
            class="text-gray-800 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-400 rounded-full p-2"
            aria-label="Close"
            data-hs-overlay="#confirm-payment"
          >
            <span class="sr-only">Close</span>
            <svg
              class="w-6 h-6"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              viewBox="0 0 24 24"
            >
              <path d="M18 6 6 18"></path>
              <path d="m6 6 12 12"></path>
            </svg>
          </button>
        </div>
        <div class="p-6">
          <p
            class="text-lg text-gray-800 dark:text-neutral-400"
            id="topup-message"
          >
            You are about to top up Rp<span id="amount-display">0</span> using
            <span id="store-display">Store Name</span>.
          </p>
        </div>
        <div
          class="flex justify-end gap-4 py-4 px-6 border-t dark:border-neutral-700"
        >
          <button
            type="button"
            class="py-2 px-4 text-sm font-medium rounded-lg border border-gray-200 bg-gray-100 text-gray-800 hover:bg-gray-200 focus:outline-none focus:bg-gray-200 dark:bg-neutral-700 dark:border-neutral-600 dark:text-neutral-400 dark:hover:bg-neutral-600 dark:focus:bg-neutral-600"
            data-hs-overlay="#confirm-payment"
          >
            Close
          </button>
          <form method="post" action="/top-up">
            <input type="hidden" name="amount" id="amount-value" />
            <button
              type="submit"
              class="py-2 px-4 text-sm font-medium rounded-lg border border-transparent bg-lime-500 text-white hover:bg-lime-600 focus:outline-none focus:bg-lime-600 dark:bg-lime-600 dark:hover:bg-lime-700"
            >
              Confirm
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/top-up.js"></script>
