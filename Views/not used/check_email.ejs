<section class="h-screen">
  <div class="h-full flex items-center justify-center bg-gray-900 relative">
    <!-- Verification Message Card -->
    <div
      class="w-full xs:mx-10 xs:max-w-md p-6 bg-white rounded-lg shadow-lg z-10"
    >
      <!-- Message Content -->
      <div class="text-center space-y-6">
        <h1 class="text-3xl font-bold text-gray-800">Check Your Email</h1>
        <p class="text-gray-600">
          A verification link has been sent to your email. Please check your
          inbox and follow the link to complete your sign-up.
        </p>

        <!-- Sign In Link -->
        <form
          id="signInForm"
          action="/email-verification"
          method="post"
          class="hidden"
        >
          <button
            class="inline-block w-full bg-lime-500 text-white py-2 rounded hover:bg-lime-600 focus:outline-none focus:ring-2 focus:ring-lime-300 transition duration-200"
          >
            Sign In
          </button>
        </form>

        <!-- Verify Later Link -->
        <div id="verifyLater" class="">
          <p class="text-gray-800">
            I will verify my email later
            <a
              class="text-lime-500 hover:text-lime-700 hover:underline transition duration-200"
              href="/sign-in"
              >Login</a
            >.
          </p>
        </div>

        <!-- Image for small screens -->
        <div
          class="sm:hidden flex justify-center items-center mt-6 bg-slate-900 rounded-lg p-3"
        >
          <img src="/img/logo_A3Mart.png" class="w-full" alt="Sample image" />
        </div>
      </div>
    </div>

    <!-- Background Image -->
    <img
      src="/img/logo_A3Mart.png"
      alt="Background Logo"
      class="xs:block hidden absolute inset-0 w-full h-full object-contain opacity-10"
    />
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    setTimeout(function () {
      const check = confirm("Verify your email now!");

      if (check) {
        document.getElementById("signInForm").classList.remove("hidden");
        document.getElementById("verifyLater").classList.add("hidden");
        return;
      }
    }, 5000);
  });
</script>
